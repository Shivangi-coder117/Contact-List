<html>

<head>
    <title>
        <%= locals.title%>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/2d9b67a497.js" crossorigin="anonymous"></script>
   
</head>
<body>
    <h1 id="first_heading">
        <i class="fas fa-address-book"></i>
        My Contacts List</h1>
    <div>
        <ul>
            <% for(let i of contacts){%>
                <li class="contacts">
                    <div class="details">
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>
                </div>
                <div class="delete_button">
                    <a href="/delete-contact/?phone=<%= i.phone %>">
                        <i class="far fa-window-close"></i>
                    </a>
                </div>
                </li>
                
                
                <% }%>
        </ul>
    </div>
    <form id="new_contacts" action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="number" name="phone" placeholder="Enter Phone" required>
        <button type="submit">Add</button>
    </form>

<script type="text/javascript" src="/js/home.js"></script>
    
</body>
</html>